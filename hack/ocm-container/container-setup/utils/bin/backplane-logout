#!/bin/bash -e

# Set sshuttle pid file
if [ -z $1 ]
then
  PIDFILE=$(pwd)/sshuttle.pid
else
  PIDFILE=$1
fi

# Check if pid file exists
if [ ! -f ${PIDFILE} ]
then
    echo "sshuttle pid file ${PIDFILE} not found, exiting..."
    exit 1
fi

# Log out of the Cluster
echo "Logging out of the cluster"
ocm backplane logout
kill $(cat ${PIDFILE})
